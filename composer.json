{
    "name": "larandomizer/app",
    "description": "The Laravel application that you install and deploy that includes all necessary ReactPHP components as dependencies.",
    "keywords": ["framework", "laravel", "randomizer", "reactphp", "async"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "cboden/ratchet": "~0.3.6",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "pda/pheanstalk": "~3.0",
        "ramsey/uuid": "^3.5",
        "react/child-process": "^0.4.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "2.0.0-alpha",
        "fzaninotto/faker": "~1.4",
        "laravel/homestead": "^4.0",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix": [
            "vendor/bin/php-cs-fixer fix -v"
        ],
        "test": [
            "touch database/database.sqlite",
            "vendor/bin/phpunit --colors=always",
            "vendor/bin/php-cs-fixer fix -v --diff --dry-run;"
        ],
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
